TITLE, STRING="MAP Test";

REAL Edes   = 0.01;
REAL gamma  = (Edes+PMASS)/PMASS;
REAL beta   = sqrt(1-(1/gamma^2));
REAL gambet = gamma*beta;
REAL P0     = gamma*beta*PMASS;
REAL brho   = (PMASS*1.0e9*gambet) / CLIGHT;
REAL rf     = 50.6328e6;  //need to be confirmed

REAL length= 30.0 * Pi / 180.0;

VALUE,{gamma,brho,Edes,beta,gambet};

Bend0: SBend,   ANGLE = 30.0*Pi / 180.0, FMAPFN = "1DPROFILE1-DEFAULT", ELEMEDGE = 0.0, DESIGNENERGY = Edes*1e3, L = 1.0, GAP = 0.02, NSLICES= 5;


Bend1: SBend, ANGLE = -60.0 * Pi / 180.0,
         FMAPFN = "1DPROFILE1-DEFAULT",
         ELEMEDGE = 0.0,
         DESIGNENERGY = 10.0,
         L = 0.5,
         GAP = 0.02;


Bend3: SBend, K0 = 2.0,
         FMAPFN = "1DPROFILE1-DEFAULT",
         ELEMEDGE = 0.0,
         DESIGNENERGY = 10.0,
         L = 0.5,
         GAP = 0.02;


BENDTEST: LINE=(Bend1);


